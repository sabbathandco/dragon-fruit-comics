{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/generate-image",
        "function": "generateImage"
      },
      {
        "source": "/create-dialogue",
        "function": "createDialogue"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
